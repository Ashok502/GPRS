<div class="panel panel-default">
	<div class="panel-heading">
		Products
	</div>
	<div class="panel-body">
		<div class="row text-left"> 
			<% Product.all.each do |product| %>
			<div class="col-lg-3 col-md-6 mb-4">
				<div class="card">
					<%= image_tag(product.logos.first.logo.url, class: "card-img-top") %>
					<div class="card-body">
						<h5 class="card-title">
							<%= product.title %>
							<span class="pull-right">
								<%= number_to_currency(product.price) %>
							</span>
						</h5>
					</div>
					<div class="card-footer">
						<%= form_tag add_to_cart_product_path(product), method: :get, remote: true do %>      
						<div class="input-group">
							<%= number_field_tag :quantity,'', min: 1, max: 20, class: 'form-control primary', autocomplete: "off", placeholder: "Qty", required: true %>
							<span class="input-group-btn">
								<button class="btn btn-primary" type="submit">Add to Cart</button>
							</span>
						</div>
						<% end %>
					</div>
				</div>
			</div>
			<% end %>	
		</div>
	</div>
</div>