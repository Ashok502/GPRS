<div class="col-sm-3">
	<div class="panel panel-default text-center">
		<div class="panel-heading">
			New Advatage
		</div>
		<div class="panel-body">
			<div id="intrest_notification"></div>
			<%= form_for @ad, html: {class: 'form-inline'}, remote: true do |f| %>      
			<fieldset>
				<div class="form-group mx-sm-3 mb-2">
					<%= f.file_field :image, class: 'pull-left', required: true %>
					<button type="submit" class="btn btn-default mb-2 pull-right"><span class="fa fa-envelope"></span></button>
				</div>
			</fieldset>
			<% end %>
		</div>
	</div>
	<div id="ads">
		<%= render partial: "/ads/index" %>
	</div>	
	<div class="panel panel-default text-center">
		<div class="panel-heading">
			Online Users
		</div>
		<div class="panel-body">
			<ul>
				<% @users.each do |user| %>
				<li><i class="fa fa-dot-circle-o fa-lg <%= user.online == true ? 'active' : '' %>"></i> <%= link_to user.username, conversations_path(user_id: user), remote: true, method: :post %></li>
				<% end %>
			</ul>
		</div> 
	</div>
</div>