$('#posts').append('<%= j render partial: "/posts/index" %>');
$("#events_calendar").html("<%= escape_javascript render(partial: '/layouts/calendar', locals: {events: @events}) %>");
<% if @posts.next_page %>
$('.pagination').replaceWith('<%= j will_paginate(@posts) %>');
<% else %>
$('.pagination').remove();
<% end %>
sleep(10);