<div class="table-responsive">
  <table class="table table-bordered text-center">
    <thead>
      <tr>
        <th class="text-center">Title</th>
        <th class="text-center">Start Date</th>
        <th class="text-center">End Date</th>
        <th class="text-center">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% events.each do |event| %>
      <tr id="event_<%= event.id %>">
        <td><%= event.title %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td>
        <%= link_to "<i class='fa fa-pencil fa-lg'></i>".html_safe, edit_event_path(event), remote: true %> | 
        <%= link_to "<i class='fa fa-times-circle fa-lg'></i>".html_safe, event_path(event), method: :delete, data: {confirm: "Are you sure"}, remote: true, style: 'color: red;' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>  