<div class="col-md-4 col-md-offset-4">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">New Event
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">Ã—</span>
					</button>
				</h5>
			</div>
			<div class="modal-body">
				<div id="event_errors"></div>
				<%= form_for @event, remote: true do |f| %>
				<div class="form-group">
					<%= f.text_field :title, placeholder: 'Title' ,autocomplete: "off", class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.text_field :start_date, placeholder: 'Start Date' ,autocomplete: "off", class: 'form-control datepicker' %>
				</div>
				<div class="form-group">
					<%= f.text_field :end_date, placeholder: 'End Date' ,autocomplete: "off", class: 'form-control datepicker' %>
				</div>
				<div class="form-group">
					<%= f.button "Save", class: 'btn btn-primary', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Save"} %>
				</div>
				<% end %>
			</div> 
		</div>
	</div>
</div>