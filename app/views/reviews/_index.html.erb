<script src="/assets/star-rating.js" type="text/javascript"></script>
<div id="review"></div>
<div class="row">
	<div class="col-sm-12">
		<div class="rating-block">
			<h4>Average rating</h4>
			<h2 class="bold padding-bottom-7"><%= product.average_rating %><small>/ 5 </small></h2>
			<input type="text" class="rating rating-loading" value="<%= product.average_rating %>" data-size="xs" title=""  disabled="disabled">
		</div>
	</div>
</div>			

<div class="row">
	<div class="col-sm-12">
		<hr/>		
		<% if @reviews.present? %>
		<div class="panel-heading">
			Reviews
		</div>
		<div class="review-block">
			<% @reviews.each do |review| %>
			<div class="row">
				<div class="col-sm-2">
					<div class="review-block-name"><a href="#"><%= review.user.username %></a></div>
					<%= image_tag review.user.avatar.url, class: 'img-circle' %>
				</div>
				<div class="col-sm-10">
					<div class="review-block-rate">
						<input type="text" class="rating rating-loading" value="<%= review.rating %>" data-size="xs" title="" disabled="disabled">
					</div>
					<div class="review-block-description">
						<%= review.description %>
					</div>
					<div class="review-block-date"><%= time_ago_in_words(review.created_at) %></div>
				</div>
			</div>
			<hr/>
			<% end %>
		</div>
		<div class="pull-right">
			<%= will_paginate @reviews, page_links: false, param_name: 'review_page', previous_label: "❮", next_label: "❯" %>
		</div> 
		<% end %>
	</div>
</div>
