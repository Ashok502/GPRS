<div class="rating-block">
	<script src="/assets/star-rating.js" type="text/javascript"></script>
	<%= form_for @review, url: product_reviews_path(product), remote: true do |f| %>      
	<div class="form-group">
		<%= f.text_field :rating, class: "rating rating-loading", 'data-size' => "xs" %>
	</div>
	<div class="form-group">
		<%= f.text_area :description, class: 'form-control', rows: 5, cols: 30, placeholder: "Description" %>
	</div>
	<div class="form-group">
		<%= f.submit "Submit", :class => 'btn btn-primary' %>
	</div>
	<% end %>
</div>
<br />