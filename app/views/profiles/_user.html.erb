<ul id="users-list">
	<% @users.each do |user| %>
	<li>
		<% if user.online %>
		<span id="<%= user.id %>-status" class="online fa fa-circle"></span>
		<% else %>
		<span id="<%= user.id %>-status" class="offline fa fa-circle"></span>
		<% end %>
		<%= link_to user.username, conversations_path(user_id: user), remote: true, method: :post, title: user.username %>
	</li>
	<% end %>
</ul>