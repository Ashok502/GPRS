<li>
  <div class="row">
    <div class="<%= current_user.id == message.user_id ? 'pull-left' : 'pull-right' %>">
      <strong><%= message.user.username %></strong> : 
      <%= message.body %>
    </div>
    <div class="<%= current_user.id == message.user_id ? 'pull-right' : 'pull-left' %>">
      <%= message.created_at.strftime("%d %b. %Y") %>
    </div>
  </div>
</li>
