<div class="panel panel-default">
  <div class="panel-heading">
    <strong> Sign up</strong>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render partial: "/layouts/errors", locals: {resource: resource} %>
    <fieldset>

      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="glyphicon glyphicon-user"></i>
          </span> 
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "E-mail", autocomplete: "email" %>                  
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="glyphicon glyphicon-lock"></i>
          </span>
          <%= f.password_field :password, class: "form-control", placeholder: "Password", autocomplete: "off" %>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="glyphicon glyphicon-lock"></i>
          </span>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation", autocomplete: "off" %>
        </div>
      </div>

      <div class="form-group">
        <input type="submit" class="btn btn-lg btn-primary btn-block" value="Sign up">
      </div>
    </fieldset>
    <% end %>
  </div>
  <div class="panel-footer ">
    <%= render "devise/shared/links" %>
  </div>
</div>
