<script src="/assets/star-rating.js" type="text/javascript"></script>
<div class="col-md-6 col-md-offset-3">
  <div class="modal-dialog">
    <div class="modal-content text-left">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          <%= product.title %>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
        </h5>
      </div>
      <div class="modal-body">
        <div class="card">
          <div class="container-fliud">
            <div class="wrapper row">
              <div class="preview col-md-5">
                <div class="preview-pic tab-content">
                  <div class="tab-pane active" id="pic-1">
                    <%= image_tag(product.logos.first.logo.url) %>
                  </div>
                </div>
                <ul class="preview-thumbnail nav nav-tabs">
                  <% product.logos.each do |logo| %>
                  <li class="active">
                    <%= link_to image_tag(logo.logo.url), "#" %>
                  </li>
                  <% end %>
                </ul>
              </div>
              <div class="details col-md-7">
                <p class="product-description"><%= product.description.html_safe %></p>
                <h5 class="price"><span><%= number_to_currency(product.price) %></span></h5>
                <div class="action">
                  <%= link_to "Add to Cart", add_to_cart_product_path(product, quantity: 1), remote: true, class: "btn btn-default" %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <hr > 
        <%= current_user ? (link_to "Give Rating", new_product_review_path(product), remote: true, class: 'btn btn-primary btn-xs rate-btn') : '' %>
        <div id="reviews"><%= render partial: '/reviews/index', locals: {product: product} %></div>
      </div>
    </div>
  </div>
</div>
